<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ForgetPWActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/xui_config_color_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@drawable/icon_back_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:id="@+id/headtip"
            android:textSize="20sp"
            android:text="Change password"
            android:textColor="#ffffff"/>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="start"
        android:padding="5dp"
        android:textAlignment="viewStart">

        <com.xuexiang.xui.widget.edittext.ClearEditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter account"
            android:textSize="20sp"
            android:inputType="number"
            app:cet_clearIcon="@drawable/delet_login"
            app:cet_clearIconSize="@dimen/default_clear_icon_size" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="start"
        android:padding="5dp"
        android:textAlignment="viewStart">

        <com.xuexiang.xui.widget.edittext.PasswordEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Set password"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            app:pet_enableIconAlpha="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="start"
        android:padding="5dp"
        android:textAlignment="viewStart">

        <com.xuexiang.xui.widget.edittext.PasswordEditText
            android:id="@+id/input_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Confirm password"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            app:pet_enableIconAlpha="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.xuexiang.xui.widget.button.ButtonView
        android:id="@+id/btnView"
        android:text="Confirm"
        android:textSize="18sp"
        style="@style/ButtonView.Blue"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:textSelectedSolidColor="@color/button_select"/>

</LinearLayout>